---
import Button from './ui/Button.astro'
import Input from './ui/Input.astro'

export interface Props {
  class?: string
  showArchiveLink?: boolean
  title?: string
  description?: string
}

const {
  class: className = '',
  showArchiveLink = true,
  title = 'Gostou desta edição?',
  description = 'Inscreva-se para receber o Puro Suco toda segunda-feira no seu email.',
} = Astro.props
---

<section
  class={`bg-amber-50 border border-amber-100 rounded-lg p-6 md:p-8 text-center ${className}`}
>
  <div class="mb-4">
    <img src="/logo.svg" alt="Logo Puro Suco" class="w-12 h-12 mx-auto" />
  </div>

  <h2 class="text-xl md:text-2xl font-serif text-gray-900 mb-3 md:mb-4">
    {title}
  </h2>

  <p class="text-sm md:text-base text-gray-700 mb-4 md:mb-6 max-w-md mx-auto">
    {description}
  </p>

  <!-- Subscription Form -->
  <form class="max-w-md mx-auto mb-4 md:mb-6" method="POST" action="/api/subscribe">
    <div class="flex flex-col gap-3 sm:flex-row">
      <div class="flex-1">
        <Input type="email" name="email" placeholder="seu@email.com" required size="md" />
      </div>
      <Button type="submit" variant="primary" size="md"> Inscrever-se </Button>
    </div>
  </form>

  <!-- Additional Actions -->
  <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
    {
      showArchiveLink && (
        <a
          href="/newsletters"
          class="text-amber-500 hover:text-amber-400 transition-colors font-medium"
        >
          Ver arquivo completo
        </a>
      )
    }
  </div>

  <p class="text-sm text-gray-500 mt-4">Newsletter semanal · Sem spam · Cancele quando quiser</p>
</section>
