---
import SubscriptionForm from './ui/SubscriptionForm.astro'

export interface Props {
  class?: string
  showArchiveLink?: boolean
  title?: string
  description?: string
}

const {
  class: className = '',
  title = 'Gostou desta edição?',
  description = 'Inscreva-se para receber o Puro Suco toda segunda-feira no seu email.',
} = Astro.props
---

<section class={`bg-gray-50 border border-gray-200 rounded-lg p-6 md:p-8 text-center ${className}`}>
  <div class="mb-4">
    <img src="/logo.svg" alt="Logo Puro Suco" class="w-12 h-12 mx-auto" />
  </div>

  <h2 class="text-xl md:text-3xl font-serif text-gray-900 mb-3 md:mb-4">
    {title}
  </h2>

  <p class="text-sm md:text-lg text-gray-700 mb-4 md:mb-6 max-w-sm mx-auto">
    {description}
  </p>

  <!-- Subscription Form -->
  <div class="max-w-md mx-auto mb-4 md:mb-6">
    <SubscriptionForm
      formId="newsletter-cta-form"
      layout="horizontal"
      buttonText="Inscrever-se"
      buttonSize="md"
      inputSize="md"
    />
  </div>

  <p class="text-sm text-gray-500 mt-4">Newsletter semanal · Sem spam · Cancele quando quiser</p>
</section>
