---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { container, TOKENS } from '../../lib/container/bindings'
import { SubscriptionUseCase } from '../../domain/usecases/SubscriptionUseCase'

const { token } = Astro.params

if (!token || typeof token !== 'string') {
  return Astro.redirect('/404')
}

let result = null
let error = null

try {
  const subscriptionUseCase = await container.resolve<SubscriptionUseCase>(
    TOKENS.SUBSCRIPTION_USE_CASE
  )

  // Pass empty string as email and token as second parameter
  result = await subscriptionUseCase.unsubscribe('', token)
} catch (err) {
  console.error('Unsubscribe error:', err)
  error = 'Erro interno do servidor. Tente novamente mais tarde.'
}
---

<BaseLayout title="Cancelar Inscrição - Puro Suco">
  <main class="container max-w-md mx-auto px-6">
    <div class="min-h-dvh flex items-center justify-center">
      <div class="text-left">
        <div class="mb-6">
          <a href="/">
            <img src="/logo.svg" alt="Logo Puro Suco" class="w-12 h-12" />
          </a>
        </div>

        {
          result && result.success ? (
            <div class="space-y-8">
              <h1 class="text-2xl md:text-5xl font-serif text-gray-900">
                Inscrição cancelada com sucesso!
              </h1>
              <p class="text-gray-700 mt-4 text-lg">
                Você não receberá mais emails da newsletter <strong>Puro Suco</strong>.
              </p>
              <div class="pt-4 space-y-4 border-t border-gray-200">
                <p class="text-base text-gray-500">
                  Mudou de ideia? Você pode se{' '}
                  <a href="/" class="text-amber-500 hover:text-amber-400 underline">
                    inscrever novamente
                  </a>{' '}
                  a qualquer momento.
                </p>
              </div>
            </div>
          ) : (
            <div class="space-y-8">
              <h1 class="text-2xl md:text-5xl font-serif text-gray-900">
                Erro ao cancelar inscrição
              </h1>
              <p class="text-gray-700 mt-4 text-lg">
                {result?.message || error || 'Token inválido ou expirado.'}
              </p>
              <div class="pt-4 space-y-4">
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                  <a
                    href="/"
                    class="inline-block bg-amber-500 hover:bg-amber-400 text-white px-6 py-3 rounded-lg font-medium transition-colors"
                  >
                    Voltar ao início
                  </a>
                  <a
                    href="/"
                    class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition-colors"
                  >
                    Tentar se inscrever
                  </a>
                </div>
                <p class="text-sm text-gray-500 mt-4">
                  Se o problema persistir, entre em contato conosco.
                </p>
              </div>
            </div>
          )
        }
      </div>
    </div>
  </main>
</BaseLayout>
